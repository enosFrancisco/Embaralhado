<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants"
    android:gravity="center"
    android:orientation="horizontal"
    android:padding="16dp">

        <ImageButton
            android:id="@+id/delete_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/ic_remove_button"
            android:contentDescription="@string/description_button_delete_item"
            android:saveEnabled="false"
            android:visibility="gone" />

        <ImageView
            android:id="@+id/image_item"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_margin="16dp" />

        <TextView
            android:id="@+id/text_item"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="AAAAA"
            android:textColor="#000000"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/edite_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="end|center"
            android:background="@mipmap/ic_edit_categorie"
            android:contentDescription="@string/description_edite_categorie"
            android:saveEnabled="false"
            android:visibility="gone"/>

</LinearLayout>